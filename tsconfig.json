{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false,
        "rootDir": ".",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"],
            "@/*": ["*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

